<h1><%= @movies.size %> Movies Reviewed!</h1>

<% @movies.each do |movie| %>
<article>
	<header>
		<h2><%= movie.title %></h2>
	</header>
	<p>
		<%= movie.description %>
	</p>
	<table>
		<tr>
			<th>Rated:</th>
			<td><%= movie.rating %></td>
		</tr>
		<tr>
			<th>Released on:</th>
			<td><%= movie.released_on %></td>
		</tr>
		<tr>
			<th>Gross earnings:</th>
			<td><%= number_to_currency(movie.total_gross) %></td>
		</tr>
	</table>
</article>
<% end %>