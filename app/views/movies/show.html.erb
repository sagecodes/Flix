<article>
	<header>
		<h1><%= @movie.title %></h1>
	</header>
	<p>
		<%= @movie.description %>
	</p>
	<table>
		<tr>
			<th>When:</th>
			<td><%= @movie.rating %></td>
		</tr>
		<tr>
			<th>Where:</th>
			<td><%= @movie.released_on %></td>
		</tr>
		<tr>
			<th>Price:</th>
			<td><%= format_total_gross(@movie)%></td>
		</tr>
	</table>
</article>
